{% extends "::base.html.twig" %}
{% block title %} Contacts{% endblock %}
{% block body %}
    <div class="col-lg-offset-2 col-lg-6 col-lg-offset-2">
        <h3>Mes contacts</h3>
        {% for flash_message in app.session.flashBag.get('notice') %}
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <span class="centre">{{ flash_message }}</span>
            </div>
        {% endfor %}
        {% for flash_message in app.session.flashBag.get('notice-warn') %}
            <div class="alert alert-warning alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <span class="centre">{{ flash_message }}</span>
            </div>
        {% endfor %}
        <table class="table table-condensed table-hover">
            <tr><th>Nom</th><th>Prénom</th><th></th><th></th><th></th></tr>
                    {%for contact in contacts%}
                <tr>
                    <td>{{contact.nom}}</td><td>{{contact.prenom}}</td>
                    <td class="btn btn-link"><a href="{{ path('user_contact', {'id':contact.id}) }}">Détails</a></td>
                    <td  class="btn"><a href="{{ path('user_modif', {'id':contact.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                    <td class="btn"><a href="{{ path('user_delete', {'id':contact.id}) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
                </tr>
            {%endfor%}
        </table>
    </div>
{% endblock %}