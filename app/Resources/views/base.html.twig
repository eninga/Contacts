<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <title>{% block title %}Test appartoo!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css') }}" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css') }}" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">
        {% endblock %}
        <script src="{{ asset('https://code.jquery.com/jquery-2.2.4.min.js') }}" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
    </head>
    <body>
        <div style="height: 50px"></div>
        <div class="container">
            <nav class="navbar navbar-default navbar-fixed-top"  role="banner">
                <div class="navbar-inner">
                    <div class="col-lg-offset-0">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="{{ path('user_contacts') }}">
                                <img alt="Appartest" src="...">
                            </a>
                        </div>
                        <div class="collapse navbar-collapse navbar-ex1-collapse pull-right">
                            <ul class="nav navbar-nav">

                                {% if app.user is not null and is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                    <li> 
                                        <a id="" href="{{ path('user_contacts') }}">
                                            Mes contacts
                                        </a>
                                    </li>
                                    <li> 
                                        <a id="" href="{{ path('user_add') }}">
                                            Ajouter un contact
                                        </a>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#!" class="dropdown-toggle" id="menuProfil" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                            <span>
                                                {{ app.user.username | upper }}
                                            </span><span class="caret"></span>
                                        </a>
                                        <ul aria-labelledby="menuProfil" class="dropdown-menu">
                                            <li><a href="{{ path('fos_user_security_logout') }}">{{'deconnexion'|trans}}</a></li>
                                        </ul>
                                    </li>
                                {% else %}
                                    <li> 
                                        <a id="" href="{{ path('fos_user_security_login') }}">
                                            {{'connexion'|trans}}
                                        </a>
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
            <div class="row">
                <div class="col-lg-12">
                    {% block body %}
                        {% block fos_user_content %}
                        {% endblock %}
                    {% endblock %}
                </div>
            </div>
        </div>
        {% block javascripts %}
            <script src="{{ asset('https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js') }}" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
